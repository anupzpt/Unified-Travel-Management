@model HotelApp.Shared.Admin.Blog.BlogCommon

<div class="carousel-header">
    <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
            <li data-bs-target="#carouselId" data-bs-slide-to="0"></li>
            <li data-bs-target="#carouselId" data-bs-slide-to="1"></li>
            <li data-bs-target="#carouselId" data-bs-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img src="/ProjectImage/@Model.BlogImageView" class="img-fluid" alt="Image">
                <div class="carousel-caption">
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<div class="container py-5">
    <div class="tour-heading">
        <h2>
            @Model.Title
        </h2>
        <p style="text-align:justify" id="description">
            @Model.Description
        </p>
        <p>
            Publish Date : @Model.CreatedDate
        </p>
        <p>
            Publish By : @Model.UserName
        </p>
    </div>
    <hr />
</div>
<script src="~/admin/reportcomponent/js/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        var description = $("#description").text();
        var sentences = description.split('.');
        var paragraphs = [];
        var currentParagraph = '';
        for (var i = 0; i < sentences.length; i++) {
            if (sentences[i].trim().length > 0) {  
                currentParagraph += sentences[i].trim() + '.';
                if ((i + 1) % 7 === 0 || i === sentences.length - 1) {
                    paragraphs.push('<p>' + currentParagraph.trim() + '</p>');
                    currentParagraph = '';  
                }
            }
        }
        $("#description").html(paragraphs.join(''));
    });
</script>