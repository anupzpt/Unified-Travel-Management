@model HotelApp.Shared.Admin.Package.PackageCommon
<link href="~/user/css/elegant-icons.css" rel="stylesheet" />
<link href="~/user/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/user/css/jquery-ui.min.css" rel="stylesheet" />
<link href="~/user/css/nice-select.css" rel="stylesheet" />
<link href="~/user/css/owl.carousel.min.css" rel="stylesheet" />
<link href="~/user/css/slicknav.min.css" rel="stylesheet" />
<link href="~/user/css/bootstrap.min2.css" rel="stylesheet" />
<link href="~/user/css/style2.css" rel="stylesheet" />
<div class="carousel-header">
    <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
            <li data-bs-target="#carouselId" data-bs-slide-to="0"></li>
            <li data-bs-target="#carouselId" data-bs-slide-to="1"></li>
            <li data-bs-target="#carouselId" data-bs-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img src="~/admin/assets/img/image/pexels-karolina-2031292-3669288.jpg" class="img-fluid" alt="Image">
                <div class="carousel-caption">
                </div>
            </div>
        </div>
    </div>
</div>
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                             src="/ProjectImage/@Model.PackageImageView" alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Model.PackageName</h3>
                    @* <div class="product__details__rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-half-o"></i>
                        <span>(18 reviews)</span>
                    </div> *@
                    <a href="@Url.Action("BookNow","Package",new {id=Model.PackageCode })" class="primary-btn">Book Now</a>
                    <ul>
                        <li><b>Average Cost</b> <span>Rs. @Model.PackageAverageCost /- per person</span></li>
                        <li><b>Country</b> <span>@Model.Country</span></li>
                        <li><b>Duration</b> <span>@Model.Duration</span></li>
                        <li><b>Best Season</b> <span>@Model.BestSeason</span></li>
                        <li><b>Group</b> <span>@Model.Group</span></li>
                        <li><b>Minimum Person</b> <span>@Model.MinimumPerson</span></li>
                        <li><b>Maximum Person</b> <span>@Model.MaximumPerson</span></li>
                        <li><b>Maximum Altitude</b> <span>@Model.MaxAltiude M.</span></li>
                        <li><b>Accommodation</b> <span>@Model.Accommodation</span></li>
                        <li><b>Transportation</b> <span>@Model.Transportation</span></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 col-md-6" style="position:relative;top:-320px">
                <h4 style="margin-top:80px;">Overview</h4>
                <hr />
                <p style="text-align:justify">
                    @Model.Description
                </p>
            </div>
            <div class="col-md-12" style="position:relative;top:-280px">
                <p>
                    <hr />
                    <h4>Guide Information</h4>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="product__details__text">
                                <ul>
                                    <li><b>Name :</b><span>@Model.GuideName</span></li>
                                    <li><b>Age :</b><span>@Model.GuideAge</span></li>
                                    <li><b>Address :</b><span>@Model.GuideAddress</span></li>
                                    <li><b>Experience :</b><span>@Model.GuideExperience</span></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="product__details__text">
                                <ul>
                                    <li><b>PhoneNo :</b><span>@Model.GuidePhoneNo</span></li>
                                    <li><b>CitizenshipNo :</b><span>@Model.GuideCitizenshipNo</span></li>
                                    <li><b>SpecializedRegion :</b><span>@Model.GuideSpecializedRegion</span></li>
                                    <li><b>Description :</b><span>@Model.GuideDescription</span></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <img src="/ProjectImage/@Model.GuideImageView" alt="image">
                        </div>
                    </div>
                </p>
            </div>


            <div class="col-lg-12" style="position:relative;top:-280px">
                <div class="product__details__tab">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-1" role="tab"
                               aria-selected="true">Package Itinerary Details</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab"
                               aria-selected="false">Package Availability </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab"
                               aria-selected="false">Package Inclusion Exclusion</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6>Package Itinerary Details</h6>
                                <div>
                                    <table class="table text-center">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Accommodation</th>
                                                <th>Meals</th>
                                                <th>Transport</th>
                                                <th>Description</th>
                                                <th>Remarks</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.PackageItineraries)
                                            {
                                                <tr>
                                                    <td>@item.Title</td>
                                                    <td>@item.Accomodation</td>
                                                    <td>@item.Meals</td>
                                                    <td>@item.Transport</td>
                                                    <td>@item.Description</td>
                                                    <td>@item.Note</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-2" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6>Package Availability </h6>
                                <div>
                                    <table class="table text-center">
                                        <tbody>
                                            @foreach (var item in Model.PackageAvailabilities)
                                            {
                                                <tr>
                                                    <td>@item.Year</td>
                                                    <td>@item.Month</td>
                                                    <td>@item.AvailableDate</td>
                                                    <td>@item.PackageCost</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-3" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6>Package Inclusion Exclusion</h6>
                                <div>
                                    <table class="table text-center">
                                        <tbody>
                                            @foreach (var item in Model.InclusionExcludesPackage)
                                            {
                                                <tr>
                                                    <td>@item.IncludeExclude</td>
                                                    <td>@item.Description</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="~/user/js/jquery-3.3.1.min.js"></script>
<script src="~/user/js/bootstrap.min.js"></script>
<script src="~/user/js/jquery-ui.min.js"></script>
<script src="~/user/js/jquery.nice-select.min.js"></script>
<script src="~/user/js/jquery.slicknav.js"></script>
<script src="~/user/js/mixitup.min.js"></script>
<script src="~/user/js/owl.carousel.min.js"></script>
<script src="~/user/js/main1.js"></script>
