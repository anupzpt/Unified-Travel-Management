@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var type = TempData["_alert.type"] as string;
    var title = TempData["_alert.title"] as string;
    var body = TempData["_alert.body"] as string;
}
@if (!string.IsNullOrEmpty(type))
{
    <script type="text/javascript">
        $(function () {
            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };
            toastr["@type"]("@body", "@title");
        });
    </script>
}
